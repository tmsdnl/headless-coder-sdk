{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "packages",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@headless-coders/core": ["./packages/core/src/index.ts"],
      "@headless-coders/core/*": ["./packages/core/src/*"],
      "@headless-coders/codex-adapter": ["./packages/codex-adapter/src/index.ts"],
      "@headless-coders/claude-adapter": ["./packages/claude-adapter/src/index.ts"],
      "@headless-coders/gemini-adapter": ["./packages/gemini-adapter/src/index.ts"]
    }
  }
}
